<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="135.0" prefWidth="150.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="32.0" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="37.0" prefHeight="41.0" prefWidth="300.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
      <padding>
        <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" alignment="TOP_CENTER" styleClass="cell_big_label" />
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
            <ImageView fx:id="genderImage" fitHeight="30.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="horoscopeImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
      </HBox>
         <HBox alignment="CENTER_LEFT">
            <children>
               <Label fx:id="aboutInfo" text="Placeholder" />
            </children>
            <VBox.margin>
               <Insets left="87.0" top="-30.0" />
            </VBox.margin>
         </HBox>
         <GridPane.margin>
            <Insets left="80.0" />
         </GridPane.margin>
    </VBox>
      <ImageView fx:id="avatarImage" fitHeight="82.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </ImageView>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
      <HBox.margin>
         <Insets bottom="5.0" top="5.0" />
      </HBox.margin>
  </GridPane>
   <opaqueInsets>
      <Insets bottom="10.0" top="10.0" />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</HBox>
